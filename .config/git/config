# -*- indent-tabs-mode: t; -*-
[include]
	path = config.d/user

[advice]
	detachedHead = false
[alias]
	a = add
	ap = add --patch
	b = branch
	bm = branch --merged
	branch-age = for-each-ref --sort=-committerdate --format='%(committerdate:relative) %(refname:short)' refs/heads/
	c = commit
	ca = commit --amend --no-edit
	cm = commit --message
	cw = commit --amend
	cfg = config
	ch = checkout
	cd = checkout --detach
	cp = cherry-pick
	cue = config user.email
	d = diff
	dc = diff --cached
	f = fetch
	fa = fetch --all
	first = rev-list --max-parents=0 HEAD
	l = log
	l1 = log -1
	la = log --all --graph --decorate --stat
	lg = log --graph
	lo = log --pretty=oneline
	m = merge
	ra = rebase --abort
	rb = rebase
	rbo = rebase --onto
	rc = rebase --continue
	rfo = rebase --force
	rfu = rebase --fixup
	rh = reset --hard
	rhh = reset --hard HEAD
	rs = reset
	ru = rebase-update
	rmc = rm --cached
	s = status
	sm = submodule
	smagd = submodule absorbgitdirs
	smfe = submodule foreach
	smfer = submodule foreach --recursive
	smi = submodule init
	sms = submodule sync
	smu = submodule update
	smun = submodule update --no-fetch
	smur = submodule-update-reset
	st = subtree
	wt = worktree
[color]
	ui = auto
	diff = auto
[help]
	autoCorrect = prompt
[init]
	defaultBranch = master
[log]
	date = rfc-local
[merge]
	conflictStyle = diff3
[pull]
	rebase = false
[push]
	default = current
	recurseSubmodules = check
[rerere]
	enabled = true

[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
